# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/database_name"

# JWT Configuration (REQUIRED)
# Generate a secure secret using: openssl rand -base64 32
JWT_SECRET="your-secure-jwt-secret-here"

# Security Configuration
# CSRF Secret (REQUIRED for production)
# Generate using: openssl rand -base64 32
CSRF_SECRET="your-secure-csrf-secret-here"

# Session Secret (REQUIRED for production)
# Generate using: openssl rand -base64 32
SESSION_SECRET="your-secure-session-secret-here"

# Allowed Origins for CORS (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Environment
NODE_ENV="development"

# Application URL (for Sentry and other services)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Sentry Configuration
# Get your DSN from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_DSN=""

# Sentry Organization and Project (for source map uploads)
SENTRY_ORG=""
SENTRY_PROJECT=""

# Sentry Auth Token (for source map uploads)
# Create at: https://sentry.io/settings/account/api/auth-tokens/
SENTRY_AUTH_TOKEN=""

# Logging Configuration
# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL="info"

# Log directory (default: logs)
LOG_DIR="logs"

# Redis Configuration
# Redis connection settings for caching
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_KEY_PREFIX="strategy-performance:"
